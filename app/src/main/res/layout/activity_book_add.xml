<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/addbook_top_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/group1"
                android:layout_weight="1"
                android:text="식비"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/group2"
                android:layout_weight="1"
                android:text="교통비"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/group3"
                android:layout_weight="1"
                android:text="여가생활"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/group4"
                android:layout_weight="1"
                android:text="의류"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/group5"
                android:layout_weight="1"
                android:text="생활비"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/group6"
                android:layout_weight="1"
                android:text="기타"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_below="@+id/addbook_top_ll"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/diaryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity= "center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/calendarView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <EditText
        android:hint="어디에 사용하셨나요?"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/whereEditText"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/diaryTextView" />

    <EditText
        android:id="@+id/contextEditText"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textMultiLine"
        android:layout_below="@+id/whereEditText"
        android:hint="메모"
        android:ems="10" />


    <EditText
        android:id="@+id/howmuchEditText"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_below="@+id/contextEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="얼마나 쓰셨나요?" />
    <Button
        android:text="저장"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EC2E2E"
        android:textColor="#ffffff"
        android:id="@+id/save_Btn"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_below="@+id/howmuchEditText"
        android:layout_marginTop="16dp"
        />
</RelativeLayout>
</layout>