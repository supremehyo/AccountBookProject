<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.EditActivity">

    <TextView
        android:id="@+id/edit_title"
        android:text="수정하기"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:id="@+id/edit_ll"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:layout_below="@+id/edit_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_where"
            android:text="어디서 사용하셨나요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <EditText
            android:id="@+id/edit_where"
            android:layout_below="@+id/edit_where"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <TextView
            android:id="@+id/tv_what"
            android:text="무엇에 사용하셨나요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <EditText
            android:id="@+id/edit_what"
            android:layout_below="@+id/edit_where"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <TextView
            android:id="@+id/tv_pay"
            android:text="얼마나 사용하셨나요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <EditText
            android:id="@+id/edit_pay"
            android:layout_below="@+id/edit_where"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_below="@+id/edit_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/delete_bt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#EC2E2E"
            android:text="삭제"
            android:textColor="#ffffff"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/edit_bt"
            android:layout_margin="8dp"
            android:text="수정"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:backgroundTint="#EC2E2E"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>



</RelativeLayout>